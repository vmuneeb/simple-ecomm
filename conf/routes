# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /shops                           controllers.CommonController.getShops()

GET     /navigation_drawer               controllers.CommonController.navigation()
GET     /banners               controllers.CommonController.banners()

GET     /products               controllers.ProductController.getProducts()

GET     /products/:id               controllers.ProductController.getProduct(id:String)


POST /login/email                 controllers.UserController.loginUser()

POST /users/register                 controllers.UserController.registerUser()



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
